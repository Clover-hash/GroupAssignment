<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="450" prefWidth="800" spacing="0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.groupassignment.SImpleRAG.ChatbotController">

    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 15 20 15 20;">
        <Label text="CHATBOT">
            <font>
                <Font name="Arial Black" size="32"/>
            </font>
        </Label>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button onAction="#Back" prefHeight="32" prefWidth="90" text="BACK"/>
    </HBox>


    <VBox VBox.vgrow="ALWAYS">
        <ScrollPane fx:id="chatScroll" fitToWidth="true" hbarPolicy="NEVER" style="-fx-padding: 10 20 10 20;"
                    VBox.vgrow="ALWAYS">
            <VBox fx:id="chatBox" fillWidth="true" spacing="10">

                <HBox alignment="CENTER_LEFT">
                    <Label maxWidth="400" style="-fx-background-color: #dddddd; -fx-text-fill: black;"
                           text="Hello! How may I help you today?" wrapText="true">
                        <padding>
                            <Insets bottom="8" left="12" right="12" top="8"/>
                        </padding>
                    </Label>
                </HBox>

                <HBox alignment="CENTER_RIGHT"/>
            </VBox>
        </ScrollPane>
    </VBox>


    <VBox spacing="8" style="-fx-padding: 10 20 15 20;">
        <HBox alignment="CENTER" spacing="20">
            <Button prefWidth="120" text="Helpful"/>
            <Button onAction="#ForwardQuery" prefWidth="120" text="Not Helpful"/>
        </HBox>

        <HBox spacing="10">
            <TextField fx:id="inputField" promptText="Type to chat" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" onAction="#handleSend" prefWidth="45" text="âž¤"/>
        </HBox>
    </VBox>
</VBox>
