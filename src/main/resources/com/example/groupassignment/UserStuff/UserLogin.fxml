<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="297.0" prefWidth="395.0" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.groupassignment.User.UserLoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="MainLabel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="101.0" prefWidth="355.0" text="Welcome to Clover's Knowledge Base" textAlignment="CENTER" textFill="#0026ff" wrapText="true">
      <font>
         <Font name="Berlin Sans FB Demi Bold" size="34.0" />
      </font></Label>
   <TextField fx:id="username" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="299.0" promptText="Enter your Username here" />
   <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="299.0" promptText="Enter your Password here" />
   <Button mnemonicParsing="false" onAction="#Login" prefHeight="25.0" prefWidth="64.0" text="LOGIN" />
    <Button onAction="#Register" text="REGISTER" />
   <Button mnemonicParsing="false" onAction="#AdminLogin" prefHeight="15.0" prefWidth="90.0" text="Admin Login" />
</VBox>
