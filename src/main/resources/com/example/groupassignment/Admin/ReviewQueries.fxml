<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="15.0" style="-fx-background-color: #dfe6ff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.groupassignment.Admin.ReviewController">

    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="25.0" />
    </padding>

    <!-- Top bar: title + back -->
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Label style="-fx-text-fill: #4453ff; -fx-font-size: 32px; -fx-font-weight: bold;" text="REVIEW QUERIES">
            <font>
                <Font name="System" size="32.0" />
            </font>
        </Label>
        <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#BackToDashboard" prefHeight="38.0" prefWidth="110.0" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: transparent;" text="BACK" />
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </HBox>

    <!-- Main content area -->
    <HBox spacing="10.0" VBox.vgrow="ALWAYS">

        <!-- Left: query list panel -->
        <VBox prefWidth="220.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 10 10 10 10;">
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: black;" text="Query List" VBox.vgrow="NEVER" />
            <ListView fx:id="QueryList" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />
        </VBox>

        <!-- Right: blue description card -->
        <VBox prefWidth="620.0" spacing="8.0" style="-fx-background-color: #4453ff; -fx-background-radius: 20; -fx-padding: 15 15 15 15;">
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-underline: true;" text="Description" VBox.vgrow="NEVER" />

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <TextArea fx:id="contentArea" editable="false" prefHeight="421.0" prefWidth="583.0" style="-fx-text-fill: black; -fx-font-size: 14px; -fx-background-color: transparent;" wrapText="true" />
            </ScrollPane>
        </VBox>
    </HBox>
</VBox>
